<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_view_height"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginStart="@dimen/padding_standard"
    android:layout_marginEnd="@dimen/padding_standard"
    android:background="@drawable/bg_button_search_primary"
    android:orientation="horizontal"
    app:layout_collapseMode="parallax"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@drawable/bg_button_search"
        android:gravity="start|center_vertical"
        android:text="@string/label_search_primary"
        android:textColor="@color/colorGray"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_search"
        android:drawableLeft="@drawable/ic_search"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"/>

    <View
        android:layout_width="@dimen/view_size_standard"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_standard"
        android:layout_marginBottom="@dimen/padding_standard"
        android:background="@color/colorGray"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bg_button_camera"
        android:src="@drawable/ic_camera"
        android:scaleType="fitCenter"
        android:contentDescription="@string/cdi_camera"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"/>

</LinearLayout>